/* pages/login/login.wxss */
.schoolicon image{
  display:block;
  width:150px;
  height:150px;
  margin:20px auto;
}
.title{
  text-align: center;
  color:#3967AA;
  font-size:28px;
}

.inputs{
  height: 100px;
}
.username,.password{
  width: 80%;
  height: 40px;
  border: 1px solid #ccc;
  margin: 10px auto;
  border-radius:5px;
  padding-left: 10px;
}
.buttons{
  display: flex;
  width:70%;
  margin: 5px auto;
}
.buttons button{
  flex:1;
  margin-right:5px;
}
.buttons .login{
  background-color: #3967AA;
  color: #fff;
}
