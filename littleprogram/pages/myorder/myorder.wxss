
.tab{
  background-color: #fff;
  width: 98%;
  height: 100%;
  border: 1px solid #fff;
  border-radius: 10px;
  margin:10rpx auto;
  color:#6d6a6a;
  
}

.tab-title{
  width:100%;
  height:50px;
  line-height:50px;
  display:flex;
  flex-direction: row;
  /* background-color: #F8F8F8; */
}
.tab-title view{
  flex:auto;
  text-align:center;
}
.active{
  color:rgb(64, 132, 214);
  background-color:#fff;
  border-bottom:2px solid rgb(64, 132, 214);
  padding-bottom:10rpx;
}

.show{
  display:block;
}
.hidden{
  display:none;
}
.tab-content{
  /* background-color: #F8F8F8; */
  width: 95%;
  height: 100%;
  border: 1px solid #fff;
  border-radius: 10px;
  margin:10px auto;
  color:#6d6a6a;
}
.orderitem{
   width: 95%;
  display:flex;
  height: 100%;
  flex-direction: column;
  border-bottom: 1px solid rgb(226, 226, 226);
  padding:20rpx;
}
/* 标题 */
.orderitemtitle{
   width: 95%;
  display:flex;
  flex:2;
  /* height:150rpx; */
}

.orderitemtitleli image{
  display:flex;
  width:90rpx;
  height:90rpx;
  margin-right:20rpx;
  border:1px solid #ccc;
  flex:2;
}
.orderitemtitleli text{
  display:flex;
  /* width:110rpx;
  height:110rpx; */
  line-height: 110rpx;
  color:#000;
  font-weight: 400rpx;
  flex:7;
}
.jiantou{
  display:flex;
  flex:1;
  padding-left:50rpx;
  color:#6d6a6a;
}


/* 订单内容 */
.orderitemcontent{
  display:flex;
  flex:8;
  flex-direction: column;
  margin-left: 110rpx;
  margin-bottom:30rpx;
}
.orderitemcontentli{
  display:flex;
}
.orderitemcontentli view{
  display:flex;
  flex:1
}
.orderitemcontentli .right{
  display:block;
  /* background-color: pink; */
  text-align: right;
}

.orderitembottom{
  display:flex;
  flex:2;
  flex-direction: column;
  color:#000;
}
.orderitembottomli{
  text-align: right;
}




