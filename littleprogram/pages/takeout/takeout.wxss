/* 捎带列表 */
.container{
  width:100%;
  height:100%;
  background-color: #f0f0f0;
  padding-top:1px;
}
/* 搜索框 */
.header {
	display: -webkit-flex;
	padding: 20rpx;
	/* background: #fff; */
}

.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.header .search {
	-webkit-flex: 1;
	color: #000;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 10rpx;
	background: #fff;
}

.header .search .icon {
	float: left;
	margin: 1rpx 5rpx 0 0;
}

.header button {
	margin-left: 20rpx;
	font-size: 30rpx;
  background-color: #ccc;
}
.blue{
  background: linear-gradient(to right,#1d73e2,rgb(62, 103, 165));
  color:#fff;
}

.header input {
	height: 30rpx;
	min-height: 40rpx;
}


scroll-view{
  width:95%;
  height:100%;
  margin:10rpx auto;
  /* background-color: pink; */
}
.item{
  display:flex;
  width:99%;
  height:220rpx;
  border:2px solid #fff;
  margin:5rpx 0;
  border-radius: 5rpx;
  background-color: #fff;
}
.item image{
  width:150rpx;
  height:150rpx; 
  border-radius: 50%;
}
.right{
  display:flex;
  width:75%;
  margin-left:10%;
}
.right .rightcontent{
  display:flex;
  flex-direction: column;
  /* flex:19; */
}
.right .itemname{
  height:56rpx;
   line-height: 56rpx;
   flex:1.2;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1; 
}
.right .itemaddress,.itemtime{
   height:46.8rpx;
   line-height: 46.8rpx;
   flex:1;
   color:#6d6a6a;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1; 
}
.right .addresscontent,.timecontent{
   flex:1;
   color:#f45044;
   
}


/* 模态框 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #9e9c9c4b;
    z-index: 9000;
    opacity: 0.6;
}
 
.modalDlg{
  padding:20rpx;
    width: 580rpx;
    height:520rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.modalDlg .itempay{
  margin-left:30rpx;
  margin-top:30rpx;
  display: flex;
  flex:1;
  color: #6d6a6a;
  /* overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 3; */
}
.modalDlg .itemmore{
  line-height: 60rpx;
  margin-left:30rpx;
  margin-top:30rpx;
  display: flex;
  flex:3;
  color: #6d6a6a;
  overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   /* word-break: break-all; */
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 4;

}

.modalDlg .btns{
  display: flex;
  flex:2;
  height:80rpx;
}

.btns{
  display: flex;
  width:70%;
  margin: 20px auto;
}

.btns button{
  /* height:100rpx; */
  background-color: #3967AA;
  color: #fff;
  height:80rpx;
  line-height: 80rpx;
}

.itempayli,.itemmoreli{
  margin-left:20rpx;
  color: #2b2929;
}



