.loading {
	font-size: 32rpx;
	text-align: center;
	line-height: 2;
	margin-bottom: 20rpx;
}

.content{
  width:96%;
  height: 100%;
  /* display: flex; */
  /* flex-direction: column; */
  margin:10px auto;
  overflow: hidden;
  margin-bottom:85px;
  border-radius: 10px;
}
.hotitem{
  height:120px;
  /* display: flex;
  flex:1; */
  padding:0 10px;
  padding-right:40px;
  background-color: #fff;
}
.hotitemliimg{
  float:left;
  width:40%;
  /* width: 110px; */
  height:100px;
  left:5px;
  padding-top:10px;
  overflow:hidden;
}
.hotitemliimg image{
  width: 230rpx;
  height:100px;
  border-radius: 10px
}
.content .hotitemlitext{
  float:right;
  height:110px;
  width:55%;
  /* display:inline-block; */
  overflow:hidden;
  margin:10px 0 0 5px;
}
.hotitemlitext .hotitemliname,.hotitemliprice,.hotitemlidetail{
  display:block;
  line-height: 25px;
  margin:3px;

}
.hotitemlitext .hotitemliname{
  font-size:20px;
}
.hotitemlitext .hotitemliprice{
  color: #f45044;
	font-size: 28rpx;
	line-height: 33rpx;
}
.hotitemlitext .hotitemlidetail{
  /* font-size:13px; */
  /* line-height: 16px; */
  color: #6d6a6a;
	font-size: 23rpx;
	line-height: 30rpx;
  /* width: 400rpx; */
  text-overflow: -o-ellipsis-lastline;/*css3中webkit内核提供的一个方法类似ellipsis*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;/*自适应盒子*/
  -webkit-line-clamp: 2;/*此处为1行,如果是两行就改成2*/
  -webkit-box-orient: vertical;

}