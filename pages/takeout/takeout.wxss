/* 捎带列表 */
.container{
  width:100%;
  height:100%;
  background-color: #f0f0f0;
}
scroll-view{
  width:90%;
  height:100%;
  margin:100rpx auto;
  /* background-color: pink; */
}
.item{
  display:flex;
  width:99%;
  height:170rpx;
  border:2px solid #fff;
  margin:5rpx 0;
  border-radius: 5rpx;
  background-color: #fff;
}
.item image{
  width:150rpx;
  height:150rpx; 
  border-radius: 50%;
}
.right{
  display:flex;
  width:75%;
  margin-left:10%;
}
.right .rightcontent{
  display:flex;
  flex-direction: column;
  /* flex:19; */
}
.right .itemname{
  height:56rpx;
   line-height: 56rpx;
   flex:1.2;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1; 
}
.right .itemaddress,.itemtime{
   height:46.8rpx;
   line-height: 46.8rpx;
   flex:1;
   color:#6d6a6a;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1; 
}
.right .addresscontent,.timecontent{
   flex:1;
   color:#f45044;
   
}


/* 模态框 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #9e9c9c4b;
    z-index: 9000;
    opacity: 0.6;
}
 
.modalDlg{
    width: 580rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
}

.modalDlg .itempay{
  margin-left:30rpx;
  margin-top:30rpx;
  display: flex;
  flex:1;
  color: #6d6a6a;
}
.modalDlg .itemmore{
  margin-left:30rpx;
  display: flex;
  flex:3;
  color: #6d6a6a;
}
.modalDlg .btns{
  display: flex;
  flex:2
}

.btns{
  display: flex;
  width:70%;
  margin: 5px auto;
}

.btns button{
  height:100rpx;
  background-color: #3967AA;
  color: #fff;
}

.itempayli,.itemmoreli{
  margin-left:20rpx;
  width:60%;
  color: #2b2929;
}



