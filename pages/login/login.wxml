<!--pages/login/login.wxml-->
<view class="container">
  <view class="schoolicon">
     <image src="../../img/xiaohui.png"></image>
  </view>
  <view class="title">
     西工大食堂
  </view>
  <view class="inputs">
     <input name="username" class="username" placeholder="请输入用户名"></input>
     <input name="password" class="password" type="password" placeholder="请输入密码"></input>
  </view>
  <view class="buttons">
      <button class="login">登录</button>
      <button>注册</button>
  </view>
  <navigator open-type="switchTab" url="../recommend/recommend?username={{username}}&passworld={{password}}">登录</navigator>
</view>
