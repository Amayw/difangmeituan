<!-- 信息部分开始 -->
<form bindsubmit="formSubmit">
<view class = "info">
<!-- 姓名部分 -->
<view class = "item">
<text>联系人</text>
<view class = "right">
<input type="text" name = "name" value = "{{name}}" focus="{{focus}}" bindinput="changename"/>
</view>
</view>

<!-- 电话部分 -->
<view class = "item">
<text>联系电话</text>
<view class = "right">
<input name="tel" type="number" value="{{tel}}"  focus="{{focus}}" bindinput="changetel"/>
</view>
</view>



<!-- 详细地址部分 -->
<view class = "item">
<text>派送地址</text>
<view class = "right">
<input name="door" type="text" value="{{door}}"  focus="{{focus}}" bindinput="changedoor"/>
</view>
</view>



</view>
<!-- 信息部分结束 -->
<button class = "save" formType="submit" >保存</button>
<button class = "delete" bindtap = "delete">删除该地址</button>
</form>